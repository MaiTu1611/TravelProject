<div class="login">
  <div class="imgcontainer">
    <h1>Thông tin tour</h1>
  </div>
  <div class="container">
    <p>
      <strong>Người đăng kí:</strong>
      <%= @tour.user.first_name + ' ' + @tour.user.last_name %>
    </p>

    <p>
      <strong>Tour:</strong>
      <%= @tour.travel.name_tour %>
    </p>

    <p>
      <strong>Trạng thái:</strong>
      <%= parse_category(@tour.status)%>
    </p>

    <p>
      <strong>Số người đi:</strong>
      <%= @tour.number_person %>
    </p>

    <p>
      <strong>Ghi chú:</strong>
      <%= @tour.description %>
    </p>
  </div>
</div>