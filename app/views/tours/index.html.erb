<div class="blog-content">
<div class="questions">
<table class="table table-hover table-bordered" style="background: white;">
  <thead>
    <tr>
      <th class="text-center">Chuyến đi</th>
      <th class="text-center">Thời gian</th>
      <th class="text-center">Ngày khởi hành</th>
      <th class="text-center">Giá</th>
      <th class="text-center">SDT</th>
      <th class="text-center">Trạng thái</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.travel.name_tour %></td>
        <td><%= tour.travel.date %></td>
        <td><%= tour.travel.time_go %></td>
        <td><%= tour.travel.price %></td>
        <td><%= current_user.telephone %></td>
        <td><%= parse_category(tour.status)%></td>
        <td class="text-center center-button"><%= link_to 'Xoá', tour, method: :delete, data: { confirm: 'Are you sure?' }, :style => "color: white;" , :class => "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
