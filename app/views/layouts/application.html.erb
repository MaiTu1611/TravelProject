<!DOCTYPE html>
<html>
  <head>
    <title>UIT TRAVEL</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Free HTML5 Template by FREEHTML5.CO" />
  <meta name="keywords" content="free html5, free template, free bootstrap, html5, css3, mobile first, responsive" />
  <meta name="author" content="FREEHTML5.CO" />
  <meta property="og:title" content=""/>
  <meta property="og:image" content=""/>
  <meta property="og:url" content=""/>
  <meta property="og:site_name" content=""/>
  <meta property="og:description" content=""/>
  <meta name="twitter:title" content="" />
  <meta name="twitter:image" content="" />
  <meta name="twitter:url" content="" />
  <meta name="twitter:card" content="" />

  </head>
  <body>
    <div id="fh5co-wrapper">
    <div id="fh5co-page">
    <div id="fh5co-header">
      <header id="fh5co-header-section">
        <div class="container">
          <div class="nav-header">
            <a href="<%= root_path%>" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
            <!-- <h1 id="fh5co-logo"><a href="<%= root_path%>">UIT TRAVEL</a></h1> -->
            <!-- START #fh5co-menu-wrap -->
            <nav id="fh5co-menu-wrap" role="navigation">
              <ul class="sf-menu" id="fh5co-primary-menu">
                <li class="active">
                  <a href="<%= root_path%>">Home</a>
                </li>
                <li><a href="<%= questions_path%>">Forum</a></li>
                <li>
                  <% if user_signed_in? %>
                    <a class="welcome_title">
                          Welcome,
                              <% if !current_user.first_name.blank? %>
                                <%= current_user.first_name.humanize  %>
                              <% end %>
                          <span> </span>
                          <% if !current_user.last_name.blank? %>
                            <%= current_user.last_name.humanize %>
                          <% end %>
                      </a>
                  <% else %>
                      <a href="<%= new_user_session_path %>">SignIn/Up</a>
                  <% end %>
                  <ul class="fh5co-sub-menu">
                      <% if user_signed_in? %>
                        <% if can? :manage, @articles %>
                          <li><%= link_to "Admin Manage", articles_path %></li>
                        <% else %>
                          <li><%= link_to "My tour", tours_path %></li>
                        <% end %>
                        <li><%= link_to "Edit Info",edit_user_path(current_user)%></li>
                        <li><%= link_to "Sign out",destroy_user_session_path, method: :delete   %></li>
                      <% else %>
                    <li><%= link_to "Sign in", new_user_session_path %></li>
                    <li><%= link_to "Sign up", new_user_registration_path %></li>
                  <% end %>
                  </ul>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </header>
      
    </div>
    
    
    <div class="fh5co-hero">
      <div class="fh5co-overlay"></div>
      <div class="fh5co-cover text-center" data-stellar-background-ratio="0.5" style="background-image: url(/assets/cover_bg_1.jpg);">
        <div class="desc animate-box">
          <h2>All Over My Homeland</h2>
          <%= form_tag root_path, :method => 'get' do %>
          <p>
            <%= text_field_tag :search, params[:search], :class => "search_tour", :placeholder => "Search.." %>
          </p>
          <% end %>
        </div>
      </div>

    </div>
      <%= yield %>
    <div>
      
    </div>

    <footer>
      <div id="footer">
        <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
              <p class="fh5co-social-icons">
                <a href="#"><i class="icon-twitter2"></i></a>
                <a href="#"><i class="icon-facebook2"></i></a>
                <a href="#"><i class="icon-instagram"></i></a>
                <a href="#"><i class="icon-dribbble2"></i></a>
                <a href="#"><i class="icon-youtube"></i></a>
              </p>
              <p>Copyright 2018 <a href="#">UIT</a>. All Rights Reserved.</p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  

  </div>
  <!-- END fh5co-page -->

  </div>
  <!-- END fh5co-wrapper -->
  </body>
</html>
